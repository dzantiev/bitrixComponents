{% for reviewKey,review in result %}
	<div class="detail__product-reviews clearfix {% if reviewKey > 0 %} hidden _hiddenReview{% endif %}">
		<div class="detail__product-reviews__top clearfix">
			<div class="detail__product-review-name">{{ review['NAME'] }}</div>
			<div class="detail__product-review-date">{{ review['FORMAT_DATE'] }}</div>
		</div>
		<div class="detail__product-review-text">{{ review['PREVIEW_TEXT'] }}</div>
		<div class="detail__product-testimonials-stars detail__product-testimonials-stars__in-feedback">
			{% for i in 1..5 %}
				{% if i <= review['PROPERTIES']['RAIT']['VALUE'] %}
					<div class="svg-star svg-star-dims testimonials-star"></div>
				{% else %}
					<div class="svg-star-empty svg-star-empty-dims testimonials-star"></div>
				{% endif %}
			{% endfor %}
		</div>
	</div>
{% endfor %}
<div class="detail__product-reviews-buttons clearfix">
	<button onclick="o2.popups.showPopup('._feedbackPopup');" class="t-button-text t-button-bluegradient product-review-leaverev">Оставить свой отзыв</button>
	{% if result|length > 1 %}
		<button onclick="detailReviews.showMore(this)" class="t-button-text t-button-blue-border product-review-readrev">Читать все отзывы <span>({{ result|length }})</span></button>
	{% endif %}
</div>
