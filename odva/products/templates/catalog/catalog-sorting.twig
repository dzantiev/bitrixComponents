<div class="catalog-sorting clearfix">
	<button class="filter-btn-small">
		Фильтр
	</button>
	<button class="filter-btn-small filter-btn__sorting">
		Сортировка
	</button>
	<div class="catalog__sort-text">Отображать товары </div>
		<div class="catalog__sort-items" onclick="o2.sortSelect.toggleState(this, event);">
			<div class="sort-items__selected">
				{% for sorting in result['SORTINGS'] if sorting['selected'] is defined %}
					<a href="javascript:void(0);">{{ sorting['name'] }}</a>
				{% endfor %}
				<img src="/html/images/svg/breadcrumbs.svg" alt="">
			</div>
			<ul class="sort-items__list-item">
				{% for sortingKey,sorting in result['SORTINGS'] if sorting['selected'] is not defined %}
					<li><a href="javascript:void(0);" onclick="cSection.setSort('{{ sortingKey }}');">{{ sorting['name'] }}</a></li>
				{% endfor %}
			</ul>
		</div>
</div>